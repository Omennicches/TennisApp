<?xml version="1.0" encoding="utf-8"?>
<ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E07152"
    tools:context=".MainActivity">

    <!-- Scoreboard Layout -->
    <LinearLayout
        android:id="@+id/scoreboardLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#001e40"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp">

        <!-- Player A Score -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/playerAName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Spieler A"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:padding="8dp" />

            <ImageView
                android:id="@+id/playerAServe"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/tennisball"
                android:visibility="gone"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/playerAScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Player B Score -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/playerBName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Spieler B"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:padding="8dp" />

            <ImageView
                android:id="@+id/playerBServe"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/tennisball"
                android:visibility="visible"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/playerBScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Sets and Tiebreaks -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/playerASetScores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 6 4"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/playerBSetScores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 7 6"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:padding="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Point Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/playerAButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@{viewModel.playerAName} Punktet"
            android:background="@drawable/button_background_green"
            android:textColor="#000000"
            android:layout_margin="10dp"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/playerBButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@{viewModel.playerBName} Punktet"
            android:background="@drawable/button_background_green"
            android:textColor="#000000"
            android:layout_margin="10dp"
            android:textSize="18sp"/>
    </LinearLayout>

    <!-- Point Reason Buttons -->
    <GridLayout
        android:id="@+id/pointReasonButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:layout_margin="20dp"
        android:columnOrderPreserved="false"
        android:useDefaultMargins="true">

        <Button
            android:id="@+id/buttonAce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ace"
            android:background="@drawable/button_background_yellow"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/buttonNetError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Netz Fehler"
            android:background="@drawable/button_background_yellow"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/buttonOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aus"
            android:background="@drawable/button_background_yellow"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/buttonDoubleBounce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doppel Aufpraller"
            android:background="@drawable/button_background_yellow"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/buttonForehand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vorhand"
            android:background="@drawable/button_background_yellow"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/buttonBackhand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rückhand"
            android:background="@drawable/button_background_yellow"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/buttonFormErrorYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Formfehler Ja"
            android:background="@drawable/button_background_yellow"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/buttonFormErrorNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Formfehler Nein"
            android:background="@drawable/button_background_yellow"
            android:textColor="#000000"/>
    </GridLayout>

    <!-- Compose View for additional Jetpack Compose UI -->
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/composeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pointReasonButtons"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <!-- Confirm Button -->
    <Button
        android:id="@+id/confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/composeView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Bestätigen"
        android:background="@drawable/button_background_green"
        android:textColor="#000000"
        android:padding="10dp"
        android:textSize="18sp"/>

</ConstraintLayout>
